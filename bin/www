#!/usr/bin/env node

/**
 * Module dependencies.
 */

const dotenv = require("dotenv");
dotenv.config();
const fs = require("fs");

var app = require("../app");
var debug = require("debug")("trails-server:server");
var http = require("http");

/* ****database**** */
var authService = require("../services/authService");
const db = require("../db");
const Trail = require("../db").Trail;
const trailFile = "../trails-server/db/json/trails.json";

/**
 * Get port from environment and store in Express.
 */

var port = normalizePort(process.env.PORT || "9000");
app.set("port", port);

/**
 * Create HTTP server.
 */

var server = http.createServer(app);

/**
 * Sync / seed db on server start. Listen on provided port, on all network interfaces.
 */

let forceDbReset = true;
db.sequelize.sync({ force: forceDbReset }).then(async () => {
  server.listen(port);
  server.on("error", onError);
  server.on("listening", onListening);

  if (forceDbReset === true) {
    const readFile = fs.readFileSync(trailFile);
    let parsedTrails = JSON.parse(readFile);
    await Trail.bulkCreate([...parsedTrails], {
      ignoreDuplicates: true,
    });

    await authService.createAdminUser(
      process.env.ADMIN_USERNAME,
      process.env.ADMIN_EMAIL,
      process.env.ADMIN_PASSWORD
    );

    console.log("Database seeded successfully...");
  }
});

/**
 * Normalize a port into a number, string, or false.
 */

function normalizePort(val) {
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}

/**
 * Event listener for HTTP server "error" event.
 */

function onError(error) {
  if (error.syscall !== "listen") {
    throw error;
  }

  var bind = typeof port === "string" ? "Pipe " + port : "Port " + port;

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case "EACCES":
      console.error(bind + " requires elevated privileges");
      process.exit(1);
      break;
    case "EADDRINUSE":
      console.error(bind + " is already in use");
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/**
 * Event listener for HTTP server "listening" event.
 */

function onListening() {
  var addr = server.address();
  var bind = typeof addr === "string" ? "pipe " + addr : "port " + addr.port;
  debug("Listening on " + bind);
  console.log(`Server running on ${port}`);
}
